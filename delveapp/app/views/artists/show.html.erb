<h1><%= "#{@artist.name}" %></h1><h2><%= "#{@artist.life_span}"%></h2>
<% if @artist.contemporary? %>
<h4>contemporary</h4>
<% end %>
<br>
<br>

<h3>Painted Works</h3>
<ul>
  <% @paintings.each do |painting| %>
    <% if painting.artist_id == @artist.id %>
        <li><em><%= link_to painting.title, painting_path(painting) %></em></li>
    <% end %>
  <% end %>
</ul>


<h4><%= link_to "Edit this Artist", edit_artist_path(@artist) %></h4>
<br>
<p><%= link_to "Delete #{@artist.name}", @artist, method: :delete, data: { confirm: 'Are you sure?' } %></p>
